{ "name": "Tone Tinter"
, "description": "Somewhat accurate, injectable tone classification"
, "version": "2.0"
, "permissions":
    [ "http://tone-analyzer-cs252.mybluemix.net/*"
    , "storage"
    ]
, "background":
    { "scripts": ["background.js"]
    , "persistent": false
    }
, "options_page": "options.html"
, "content_scripts":
    [ { "matches":
          [ "https://*/*"
          , "http://*/*"
          ]
      , "js": 
          [ "options.js"
          , "toneTinter.js"
          ]
      , "css": [ "toneTinter.css" ]
      , "run_at": "document_end"
      }
    ]
/*, "browser_action":
    { "default_title": "Annotate Documents by Tone"
    , "default_popup": "popup.html"
    } */
, "manifest_version": 2
}
